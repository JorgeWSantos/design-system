{
  "extends": "@abqm-ds/ts-config/react.json",
  "include": ["src", "vite.config.ts", "src/@types"],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/__tests__/**",
    "**/__mocks__/**",
    "src/setupTests.*"
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "skipLibCheck": true
  }
}
